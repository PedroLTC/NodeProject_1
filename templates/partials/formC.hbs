<div class="container p-3 mt-5 bg-primary" id="cont-form">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form id="form-con">
                <fieldset>

                    <div class="form-group">
                        <label for="exampleSelect1" class="text-white">Principales Criptomonedas</label>
                        <select class="form-control" id="exampleSelect1" name="currency" required>
                            <option value="">seleccione una moneda</option>
                            <option value="BTC">BTC</option>
                            <option value="ETH">ETH</option>
                            <option value="XRP">XRP</option>
                        </select>
                        <small id="emailHelp" class="form-text text-muted">BTC = Bitcoin / ETH = Ethereum / XRP = Ripple</small>
                    </div>

                    <div class="form-group">
                        <label for="date-start" class="text-white">Fecha de Inicio</label>
                        <input type="date" class="form-control" id="date-start" aria-describedby="emailHelp"
                            placeholder="mm/dd/yy" name="dateStart" min="2018-01-01" required onchange="validarS(this.value)">
                        <small id="emailHelp" class="form-text text-muted">El formato de la fecha es como se muestra en el ejemplo.</small>
                    </div>
                    <div class="form-group">
                        <label for="date-end" class="text-white">Fecha de Cierre</label>
                        <input type="date" class="form-control" id="date-end" placeholder="mm/dd/yy" name="dateEnd" min="2018-01-01" required onchange="validarE(this.value)">
                        <small id="emailHelp" class="form-text text-muted">El formato de la fecha es como se muestra en el ejemplo.</small>
                    </div>


                    <button type="submit" class="btn btn-primary border border-white">Consultar</button>
                </fieldset>
            </form>
        </div>

    </div>
</div>